<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.mapper.QuestionMapper">

    <resultMap id="QuestionResultMap" type="com.example.app.model.Question">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="createTime" column="create_time" />
    </resultMap>

    <select id="selectById" parameterType="Long" resultMap="QuestionResultMap">
        SELECT * FROM questions WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="QuestionResultMap">
        SELECT * FROM questions ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.example.app.model.Question" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO questions (user_id, title, content, create_time)
        VALUES (#{userId}, #{title}, #{content}, #{createTime})
    </insert>

</mapper>